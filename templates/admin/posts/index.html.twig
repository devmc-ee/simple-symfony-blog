{% extends 'admin/index.html.twig' %}
{% block body %}
    <h1>
        {{ title }}
    </h1>

    <div class="row">
        <div class="col  justify-content-center">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}

        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-primary mb-2 mt-2" href="{{ path('admin_posts_create') }}">new post</a>
        </div>
    </div>
    <table class="table table-fullwidth  table-hover">
        <tbody>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Created at</th>
            <th>Actions</th>
        </tr>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td><a href="{{ path('admin_post_edit', {'id': post.id}) }}"> {{ post.title }}</a></td>
                <td>{{ post.getCreatedBy.email }}</td>
                <td>{{ post.getCreatedAt | date("d.m.Y H:i") }}</td>
                <td><a href="{{ path('admin_post_edit', {'id': post.id}) }}">Edit</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
