{% extends 'admin/index.html.twig' %}
{% block body %}
    <h1>
        {{ title }}
    </h1>

    <h2>Posts: </h2>
    <div class="col"><a href="{{ path('admin_posts_create') }}">new post</a></div>
    <table class="table table-fullwidth table-responsive table-hover">
        <tbody>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Author</th>
            <th>Created at</th>
            <th>Actions</th>
        </tr>
        {% for post in posts %}
            <tr>
                <td>{{ post.id }}</td>
                <td> <a href=""> {{ post.title }}</a></td>
                <td>{{ post.created_by_id }}</td>
                <td>{{ post.created_at }}</td>
                <td></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

 {% block menu %}
     <li class="nav-item active">
         <a class="nav-link" href="{{ path('admin_home') }}">Dashboard</a>
     </li>
 {% endblock %}