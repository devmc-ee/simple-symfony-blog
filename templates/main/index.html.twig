{% extends 'main/base.html.twig' %}
{% block body %}
    <div class="row mb-3">
        <div class="col">
            <h1>
                {{ title }}
            </h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            {% for post in posts %}


                <div class="card mb-3">
                    <div class="row no-gutters">
                        <div class="col-md-4">
                            <img src="{{ asset('uploads/post/') }}{{ post.image }}" class="card-img" alt="...">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="{{ path('post_show', {'id': post.id}) }}">
                                        {{ post.title }}
                                    </a>
                                </h5>
                                <p class="card-text">
                                    {{ post.content  [:200] | raw}}...
                                </p>
                                <p class="card-text"><small class="text-muted">
                                        {{ post.createdAt | date('d.m.Y H:i') }}
                                    by {{ post.createdBy.email }}</small></p>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}

